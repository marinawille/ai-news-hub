rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Vote counts: anyone can read, authenticated users can write (via batch with votes)
    match /voteCounts/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Individual votes: public read, authenticated users manage their own votes
    match /votes/{voteId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['articleId', 'userId', 'votedAt']);
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
      allow update: if false;
    }

    // User profiles (preparado para futuras funcionalidades)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
